<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="com.spring.autowire.XML.Address" name="address">
        <property name="street" value="80, gopal lal seth lane"/>
        <property name="city" value="Howrah"/>
    </bean>

    <bean class="com.spring.autowire.XML.Emp" name="employee" autowire="byType"/>
<!--    <bean class="com.spring.autowire.XML.Emp" name="employee" autowire="byName"/>-->
<!--    <bean class="com.spring.autowire.XML.Emp" name="employee" autowire="constructor"/>-->
</beans>